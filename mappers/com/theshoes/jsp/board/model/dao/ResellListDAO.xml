	<select id="selectOneResellList" resultMap="ResellDetailResultMap">
		SELECT
		       A.BOARD_NO
		     , A.BOARD_ID
		     , A.BOARD_CATEGORY_NO
		     , A.BOARD_TITLE
		     , A.BOARD_CONTENT
		     , A.CATEGORY_ORDER
		     , B.RT_NO
		     , B.RESELL_THUMB_NO
		     , B.RESELL_ORIGINAL_NAME
		     , B.RESELL_SAVED_NAME
		     , B.RESELL_SAVE_PATH
		     , B.RESELL_FILE_TYPE
		     , B.RESELL_THUMBNAIL_PATH
		     , B.RESELL_ATTACHMENT_STATUS
		     , C.COMMENTS_NO
		     , C.BOARD_COMMENTS_NO
		     , C.COMMENTS_CONTENT
		     , C.COMMENTS_YN
		     , C.COMMENTS_REGDATE
		  FROM BOARD A
		  LEFT JOIN RESELL_THUMB B ON(B.RT_NO = A.BOARD_NO)
		  LEFT JOIN COMMENTS C ON(C.BOARD_COMMENTS_NO = A.BOARD_NO)
		 WHERE A.BOARD_CATEGORY_NO = 3
		   AND A.BOARD_NO = #{ boardNo }
	</select>
	
	<insert id="insertResellThumb" parameterType="com.theshoes.jsp.board.model.dto.ResellThumbDTO">
		INSERT 
			  INTO RESELL_THUMB A
			(
			  A.RT_NO
			, A.RESELL_THUMB_NO
			, A.RESELL_ORIGINAL_NAME
			, A.RESELL_SAVED_NAME
			, A.RESELL_SAVE_PATH
			, A.RESELL_FILE_TYPE
			, A.RESELL_THUMBNAIL_PATH
			)
			VALUES
			(
			  SEQ_BOARD_CODE.CURRVAL
			, #{ resellThumbNo }
			, #{ originalName }
			, #{ savedName }
			, #{ savePath }
			, #{ fileType }
			, #{ thumbnailPath }
			)
	</insert>
	
	<insert id="insertResellShoes" parameterType="com.theshoes.jsp.board.model.dto.ResellListDTO">
		INSERT
          INTO BOARD A
        (
          A.BOARD_NO
        , A.BOARD_ID
        , A.BOARD_CATEGORY_NO
        , A.BOARD_TITLE
        , A.BOARD_CONTENT
        , A.BOARD_REGDATE
        , A.BOARD_HIT
        , A.CATEGORY_ORDER
        )
        VALUES
        (
          SEQ_BOARD_CODE.NEXTVAL
        , #{ boardId }
        , 3
        , #{ boardTitle }
        , #{ boardContent }
        , SYSDATE
        , 1
        , SEQ_CATEGORY_RESELL_CODE.NEXTVAL
        )
	</insert>
	
	<insert id="comments">
		INSERT 
		  INTO COMMENTS A
		(
		  A.COMMENTS_NO
		, A.COMMENTS_ID
		, A.BOARD_COMMENTS_NO
		, A.COMMENTS_CONTENT
		, A.COMMENTS_YN
		, A.COMMENTS_REGDATE
		)
		VALUES
		(
		  SEQ_COMMENTS_CODE.NEXTVAL
		, #{ commentsId }
		, #{ boardNo }
		, #{ commentsContent }
		, #{ commentsYn }
		, SYSDATE
		)
	</insert>
</mapper>