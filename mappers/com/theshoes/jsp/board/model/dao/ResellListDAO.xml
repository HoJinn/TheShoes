<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ResellListDAO.xml">

	<resultMap type="com.theshoes.jsp.board.model.dto.BoardDTO" id="ResellListResultMap">
		<id property="boardNo" column="BOARD_NO"/>
		<result property="boardId" column="BOARD_ID"/>
		<result property="boardCategoryNo" column="BOARD_CATEGORY_NO"/>
		<result property="boardTitle" column="BOARD_TITLE"/>
		<result property="boardContent" column="BOARD_CONTENT"/>
		<result property="boardRegDate" column="BOARD_REGDATE"/>
		<result property="boardHit" column="BOARD_HIT"/>
		<result property="categoryOrder" column="CATEGORY_ORDER"/>
	</resultMap>
	
	<resultMap type="com.theshoes.jsp.board.model.dto.BoardCategoryDTO" id="BoardCategoryResultMap">
		<id property="boardCategoryNo" column="BOARD_CATEGORY_NO"/>
		<result property="boardCategoryName" column="BOARD_CATEGORY_NAME"/>
	</resultMap>
	
	<resultMap type="com.theshoes.jsp.board.model.dto.ResellDetailDTO" id="ResellDetailResultMap">
		<id property="resellNo" column="RESELL_NO"/>
		<result property="boardNo" column="BOARD_NO"/>
		<result property="boardId" column="BOARD_ID"/>
		<result property="boardCategoryNo" column="BOARD_CATEGORY_NO"/>
		<result property="boardTitle" column="BOARD_TITLE"/>
		<result property="boardContent" column="BOARD_CONTENT"/>
		<result property="categoryOrder" column="CATEGORY_ORDER"/>
		
		<association property="category" resultMap="BoardCategoryResultMap"></association>
		<collection property="resellThumb" resultMap="ResellThumbResultMap"/>
	</resultMap>
	
	<resultMap type="com.theshoes.jsp.board.model.dto.ResellThumbDTO" id="ResellThumbResultMap">
		<id property="rtNo" column="RT_NO"/>
		<result property="originalName" column="ORIGINAL_NAME"/>
		<result property="savedName" column="SAVED_NAME"/>
		<result property="savePath" column="SAVE_PATH"/>
		<result property="fileType" column="FILE_TYPE"/>
		<result property="thumbnailPath" column="THUMBNAIL_PATH"/>
		<result property="status" column="ATTACHMENT_STATUS"/>
	</resultMap>
	
	<select id="selectResellList" resultMap="ResellListResultMap">
		  SELECT
		       A.BOARD_NO
		     , A.BOARD_ID
		     , A.BOARD_TITLE
		     , A.BOARD_CONTENT
		     , A.BOARD_REGDATE
		     , A.BOARD_HIT
		  FROM BOARD A
		 WHERE A.BOARD_CATEGORY_NO = 3
		ORDER BY 1 DESC
	</select>
	
	<insert id="insertResellShoes" parameterType="com.theshoes.jsp.board.model.dto.ResellDetailDTO">
		INSERT 
			  A.BOARD_NO
	        , A.BOARD_CATEGORY_NO
	        , A.BOARD_TITLE
	        , A.BOARD_CONTENT
	        , A.BOARD_HIT
	        , A.CATEGORY_ORDER
	        )
	        VALUES
	        (
	          SEQ_BOARD_CODE.NEXTVAL
	        , 3
	        , #{ boardTitle }
	        , #{ boardContent }
	        , 1
	        , SEQ_CATEGORY_RESELL_CODE.NEXTVAL
	        )
	        <selectKey keyProperty="boardNo" resultType="Integer" order="AFTER">
        	SELECT
        	       SEQ_BOARD_CODE.CURRVAL
        	  FROM DUAL
        	</selectKey>
	</insert>
	
	<insert id="insertResellThumb" parameterType="com.theshoes.jsp.board.model.dto.ResellThumbDTO">
		INSERT 
			  INTO RESELL_THUMB A
			(
			, A.RT_NO
			, A.ORIGINAL_NAME
			, A.SAVED_NAME
			, A.SAVE_PATH
			, A.FILE_TYPE
			, A.THUMBNAIL_PATH
			, A.ATTACHMENT_STATUS
			)
			VALUES
			(
			, SEQ_RT_CODE.NEXTRVAL
			, #{ originalName }
			, #{ savedName }
			, #{ savePath }
			, #{ fileType }
			, #{ thumbnailPath }
			, 'Y'
			)
	</insert>
	
	
</mapper>