<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberDAO">
	<resultMap type="com.theshoes.jsp.member.model.dto.MemberDTO" id="memberResultMap">
		<id property="id" column="MEMBER_ID"/>
		<result property="name" column="NAME"/>
		<result property="pwd" column="PWD"/>
		<result property="email" column="EMAIL"/>
		<result property="phone" column="PHONE_NO"/>
		<result property="enrollDate" column="ENROLL_DATE"/>
		<result property="blackReason" column="BLACK_REASON"/>
		<result property="blackListYn" column="BLACKLIST_YN"/>
		<result property="withDrawYn" column="WITHDRAW_YN"/>
		<result property="birth" column="BIRTH"/>
		<result property="role" column="ROLE"/>
	</resultMap>
	
	<select id="selectMemberOne" resultMap="memberResultMap">
		SELECT /* com.greedy.jsp.member.model.dao.MemberDAO#selectLoginMember() */
			   A.MEMBER_ID
		     , A.NAME
		     , A.PWD
		     , A.EMAIL
		     , A.PHONE_NO
		     , A.ENROLL_DATE
		     , A.BLACK_REASON
		     , A.BLACKLIST_YN
		     , A.WITHDRAW_YN
		 FROM  MEMBER A
		WHERE  A.BLACKLIST_YN = 'N'
		  AND  A.MEMBER_ID = #{ id }
	</select>
</mapper>
